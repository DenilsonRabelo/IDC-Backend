{
    "env": {
        "es2021":true,
        "node": true,
        "commonjs": false
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
    },
    "settings": {
        "import/resolver": {
          "alias": {
            "map": [
              ["@modules","./src/modules"],
              ["@shared","./src/shared"],
              ["@config", "./src/config"]
              ],
            "extensions": [".js", ".jsx", ".ts", ".tsx"]
          }
        }
      }
}
