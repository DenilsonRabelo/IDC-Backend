// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["dev", "test", "example"]
}

model Exemplo {
  id   Int    @id @default(autoincrement())
  nome String
  @@map("exemplo")
  @@schema("example")
}

model Produto {
  id          Int      @id @default(autoincrement())
  nome        String
  preco       Float
  peso        Float
  categoriaId Int ?
  Categoria   Categoria ? @relation(fields: [categoriaId], references: [id])

  @@schema("example")
}

model Categoria {
  id       Int       @id @default(autoincrement())
  nome     String
  produtos Produto[]

  @@schema("example")
}

model UserBase {
  id String @id @default(uuid())

  @@map("user")
  @@schema("dev")
}

model UserTest {
  id String @id @default(uuid())

  @@map("user")
  @@schema("test")
}
