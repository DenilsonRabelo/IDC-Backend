{
    "compilerOptions": {
        "baseUrl": "./src",
        "rootDir": "./",
        "target":"ES2022",
        "module": "CommonJS",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
	    "lib": ["esnext"],
        "allowJs": true,
        "paths": {
            "@controllers/*": ["controllers/*"],
            "@middlewares/*": ["middlewares/*"],
            "@routes/*": ["routes/*"],
            "@repositories/*": ["repositories/*"],
            "@services/*": ["services/*"],
            "@shared/*": ["shared/*"],
            "@config/*": ["config/*"],
          }
    },
}
